<%= form_for [book1, book_comment], remote: true do |f| %>
	<%= render 'layouts/error_messages', model: f.object %>
		<div class="row">
			<div class="col-sm-12">
				<%= f.text_area :comment, rows:'5', class: "form-control",placeholder:"コメントをここに" %>
			</div>
		</div>
	<%= f.submit "Post Comment", class: "btn btn-lg btn-primary mt-20 pull-right" %>
<% end %>